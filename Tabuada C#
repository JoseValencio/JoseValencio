Programa que mostra a tabuada, onde o usuario informa o numero e qual operação quer.

using System;

public class Tabuada
{
    public static void Main(string[] args)
    {
        int valor = 10; 
        double mult;
		double sub;
        Console.WriteLine("Informa o Numero da Tabuada");
        double N = Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("Qual Operação você quer?");
		Console.WriteLine("Digite + para  Soma");
		Console.WriteLine("Digite - para  Subtração");
		Console.WriteLine("Digite / para  Divisão");
		Console.WriteLine("Digite * para  Multiplicação");
        string operacao = Console.ReadLine();        
       
        switch(operacao){
			case "+": 
        for (int i=1; i <= valor; i++){
        
             mult = i + N;
            
            Console.WriteLine(i + " + " + N + " = " + mult );
		
        
        }
		break;
					case "-": 
        for (int i=1; i <= valor; i++){
        
             sub = N - i;
            
            Console.WriteLine(i + " - " + N + " = " + sub );
		
        
        }
		break;
			        case "*":
				
				  for (int i=1; i <= valor; i++){
        
             sub = N * i;
            
            Console.WriteLine(i + " * " + N + " = " + sub );
				  }
        break;
        
			        case "/":
				
				  for (int i=1; i <= valor; i++){
        
             sub = i / N;
					  
            
            Console.WriteLine( i + " / " + N + " = " +  sub);
				  }
       break;
        }
     
	
	}
}
